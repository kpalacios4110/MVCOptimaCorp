@model IEnumerable<OptimaCorpCRUD.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<h1>Departamentos</h1>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
        <tr>
             <th>
                  ID
             </th>
             <th>
                Nombre de departamento
            </th>
            <th>Acciones:</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Editar</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
<div class="form-group d-flex justify-content-center">
    <a asp-action="Create" class="btn btn-primary">Crear</a>
</div>