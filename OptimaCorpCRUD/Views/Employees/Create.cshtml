@model OptimaCorpCRUD.Models.Employee

@{
    ViewData["Title"] = "Create";
}

<h1>Crear empleados</h1>

<hr />
<div class="d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create" method="post" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label">ID</label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nombre</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salary" class="control-label">Salario</label>
                <input asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdDeparmentFk" class="control-label">Departamento</label>
                <select asp-for="IdDeparmentFk" class="form-control" asp-items="@(ViewData["IdDeparmentFk"] as SelectList)"></select>
                <span asp-validation-for="IdDeparmentFk" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">Crear</button> |
                <a asp-action="Index" class="btn btn-secondary">Atrás</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            var message = '@TempData["Message"]';
            if (message) {
                alert(message);
            }
        });
    </script>

}
